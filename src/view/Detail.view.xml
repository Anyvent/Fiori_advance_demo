<mvc:View controllerName="be.thevaluechain.fioriadvanced.controller.Detail"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="detailPage" showFooter="{comp>/detailEditMode}"
		stickySubheaderProvider="iconTabBar"
		class="sapUiNoContentPadding"
		busy="{state>/detailView/busy}"
		busyIndicatorDelay="{state>/detailView/delay}">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{ID}" level="H2" />
				</f:heading>
				<f:expandedContent>
					<Label text="{ID}" />
				</f:expandedContent>
				<f:snappedContent>
					<Label text="{ID}" />
				</f:snappedContent>
				<f:snappedTitleOnMobile>
					<Title text="{ID}" />
				</f:snappedTitleOnMobile>
				<f:navigationActions>
					<OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://full-screen"
						press=".handleFullScreen"
						tooltip="{i18n>fullscreen}"
						visible="{= ${appView>/actionButtonsInfo/midColumn/fullScreen} !== null }" />
					<OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://exit-full-screen"
						press=".handleExitFullScreen"
						tooltip="{i18n>exitFullscreen}"
						visible="{= ${appView>/actionButtonsInfo/midColumn/exitFullScreen} !== null }" />
					<OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://decline"
						press=".handleClose"
						tooltip="{i18n>close}"
						visible="{= ${appView>/actionButtonsInfo/midColumn/closeColumn} !== null }" />
				</f:navigationActions>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<ObjectAttribute title="Other field"
					text="{path:'ID',formatter: '.formatter.formatValue'}" />
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<IconTabBar
				id="iconTabBar"
				expanded="{device>/isNoPhone}"
				class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter text="Tab 1" key="tab1">
						<!-- <Text text="Add some content..."></Text> -->
						<!-- Actual content of the page -->
						<VBox>
							<!-- via Custom model -->
							<form:SimpleForm editable="true" layout="ResponsiveGridLayout"
								title="Personal Info via cutom model"
								labelSpanL="3" adjustLabelSpan="false" emptySpanL="4" columnsL="1"
								singleContainerFullSize="false">
								<form:content>
									<Label text="First name" />
									<Input value="{state>/Person/FirstName}" />
									<Label text="Last name" />
									<Input value="{state>/Person/LastName}" />
									<Label text="Company" />
									<Input value="{state>/Person/Company}" />
								</form:content>
							</form:SimpleForm>

							<!-- via odatamodel -->
							<!-- <form:SimpleForm editable="true" layout="ResponsiveGridLayout"
								title="Personal Info via oData"
								labelSpanL="3" adjustLabelSpan="false" emptySpanL="4" columnsL="1"
								singleContainerFullSize="false">
								<form:content>
									<Label text="First name" />
									<Input value="{FirstName}" />
									<Label text="Last name" />
									<Input value="{LastName}" />
									<Label text="Company" />
									<Input value="{Company}" />
								</form:content>
							</form:SimpleForm> -->
						</VBox>
					</IconTabFilter>
					<IconTabFilter text="Tab 2" key="tab2">
						<Text text="Whatever you like"></Text>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</f:content>
		<f:footer>
			<OverflowToolbar>
				<Button icon="sap-icon://alert" text="{=${message>/}.length}"
					visible="{=${message>/}.length > 0}"
					type="Emphasized" press=".onMessagePopoverPress">
				</Button>
				<ToolbarSpacer />
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>